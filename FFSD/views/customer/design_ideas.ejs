        const activeCategory = document.getElementById('activeCategory');
        const categoryBtns = document.querySelectorAll('.category-btn');

        dropdownBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdownContent.classList.toggle('show');
        });

        window.addEventListener('click', (e) => {
            if (!e.target.closest('.dropdown')) {
                dropdownContent.classList.remove('show');
            }
        });

        categoryBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const category = btn.getAttribute('data-category');
                setActiveCategory(category);
                scrollToSection(category);
                dropdownContent.classList.remove('show');
            });
        });

        function setActiveCategory(category) {
            activeCategory.textContent = category.replace(/([A-Z])/g, ' $1').trim();
            categoryBtns.forEach(btn => {
                if (btn.getAttribute('data-category') === category) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }

        function scrollToSection(category) {
            const section = document.getElementById(category);
            if (section) {
                section.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // Create design card
        function createDesignCard(category, index, order) {
            const card = document.createElement('div');
            card.className = 'design-card';
            card.style.setProperty('--order', order);
            
            const imageSrc = imageLinks[category] && imageLinks[category][index-1] 
                ? imageLinks[category][index-1]
                : 'https://via.placeholder.com/400x250?text=Image+Not+Found'; 
                
            const designId = `${category}-${index}`;
            const isFavorite = favorites[designId] ? 'active' : '';
            
            card.innerHTML = `
                <div class="card-image-container">
                    <img src="${imageSrc}" alt="${category} Design ${index}" class="card-image">
                    <button class="favorite-btn ${isFavorite}" data-id="${designId}" data-category="${category}" data-index="${index}" data-image="${imageSrc}">
                        <i class="fas fa-heart"></i>
                    </button>
                    <div class="card-overlay"></div>
                </div>
                <div class="card-content">
                    <h3 class="card-title">${category.replace(/([A-Z])/g, ' $1').trim()} Design ${index}</h3>
                    <p class="card-description">Modern design with stylish elements that bring elegance to your space</p>
                    <div class="card-status">
                        <span class="status-indicator"></span>
                        <span class="status-text">Available</span>
                    </div>
                </div>
            `;
            
            return card;
        }

        // Generate design cards
        function generateDesignCards() {
            categories.forEach(category => {
                const grid = document.getElementById(`${category}Grid`);
                if (!grid) return;
                
                grid.innerHTML = '';
                
                const cardCount = imageLinks[category] ? imageLinks[category].length : 6;
                
                for (let i = 1; i <= cardCount; i++) {
                    const card = createDesignCard(category, i, i - 1);
                    grid.appendChild(card);
                }
            });
            
            attachFavoriteListeners();
        }

        // Favorites functionality
        function attachFavoriteListeners() {
            const favoriteBtns = document.querySelectorAll('.favorite-btn');
            favoriteBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    toggleFavorite(btn);
                });
            });
        }

        function toggleFavorite(btn) {
            const id = btn.getAttribute('data-id');
            const category = btn.getAttribute('data-category');
            const index = btn.getAttribute('data-index');
            const image = btn.getAttribute('data-image');
            
            if (favorites[id]) {
                delete favorites[id];
                btn.classList.remove('active');
            } else {
                favorites[id] = {
                    category: category,
                    index: index,
                    image: image,
                    title: `${category.replace(/([A-Z])/g, ' $1').trim()} Design ${index}`
                };
                btn.classList.add('active');
            }
            
            updateFavoritesCount();
            saveFavorites();
        }

        function updateFavoritesCount() {
            const count = Object.keys(favorites).length;
            document.getElementById('favoritesCount').textContent = count;
        }

        function saveFavorites() {
            // In a real app, you would save to localStorage or a backend
            // For this demo, we're just keeping in memory
        }

        // Favorites modal
        const favoritesBtn = document.getElementById('favoritesBtn');
        const favoritesModal = document.getElementById('favoritesModal');
        const closeModal = document.getElementById('closeModal');
        const favoritesGrid = document.getElementById('favoritesGrid');

        favoritesBtn.addEventListener('click', () => {
            openFavoritesModal();
        });

        closeModal.addEventListener('click', () => {
            favoritesModal.classList.remove('show');
        });

        favoritesModal.addEventListener('click', (e) => {
            if (e.target === favoritesModal) {
                favoritesModal.classList.remove('show');
            }
        });

        function openFavoritesModal() {
            renderFavorites();
            favoritesModal.classList.add('show');
        }

        function renderFavorites() {
            const favoriteKeys = Object.keys(favorites);
            
            if (favoriteKeys.length === 0) {
                favoritesGrid.innerHTML = `
                    <div class="empty-favorites">
                        <i class="fas fa-heart-broken"></i>
                        <p>No favorites yet. Start adding designs you love!</p>
                    </div>
                `;
                return;
            }
            
            favoritesGrid.innerHTML = '';
            
            favoriteKeys.forEach(key => {
                const fav = favorites[key];
                const item = document.createElement('div');
                item.className = 'favorite-item';
                
                item.innerHTML = `
                    <img src="${fav.image}" alt="${fav.title}">
                    <button class="remove-favorite" data-id="${key}">
                        <i class="fas fa-times"></i>
                    </button>
                    <div class="favorite-item-info">
                        <div class="favorite-item-title">${fav.title}</div>
                    </div>
                `;
                
                favoritesGrid.appendChild(item);
            });
            
            // Attach remove listeners
            const removeBtns = document.querySelectorAll('.remove-favorite');
            removeBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.getAttribute('data-id');
                    removeFavorite(id);
                });
            });
        }

        function removeFavorite(id) {
            delete favorites[id];
            updateFavoritesCount();
            renderFavorites();
            
            // Update the favorite button in the main grid
            const favoriteBtn = document.querySelector(`.favorite-btn[data-id="${id}"]`);
            if (favoriteBtn) {
                favoriteBtn.classList.remove('active');
            }
            
            saveFavorites();
        }

        // Initialize
        function init() {
            generateDesignCards();
            setActiveCategory('LivingRoom');
            updateFavoritesCount();
        }

        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>