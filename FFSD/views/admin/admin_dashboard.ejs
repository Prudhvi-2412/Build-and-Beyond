<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            color: #2d3748;
            font-size: 28px;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-left: 5px solid;
            transition: transform 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card.blue { border-left-color: #3b82f6; }
        .stat-card.purple { border-left-color: #8b5cf6; }
        .stat-card.green { border-left-color: #10b981; }
        .stat-card.orange { border-left-color: #f59e0b; }
        .stat-card.red { border-left-color: #ef4444; }
        .stat-card.indigo { border-left-color: #6366f1; }

        .stat-card h3 {
            color: #6b7280;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 10px;
        }

        .stat-card .value {
            font-size: 36px;
            font-weight: 700;
            color: #1f2937;
        }

        .tabs {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        .tab-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            border-bottom: 2px solid #e5e7eb;
            padding-bottom: 15px;
        }

        .tab-btn {
            padding: 10px 20px;
            background: transparent;
            border: none;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            color: #6b7280;
            transition: all 0.3s;
            border-radius: 8px;
        }

        .tab-btn:hover {
            background: #f3f4f6;
        }

        .tab-btn.active {
            color: #667eea;
            background: #eef2ff;
        }

        .content-section {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .section-header h2 {
            color: #1f2937;
            font-size: 22px;
        }

        .search-filter {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .search-box {
            padding: 10px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            width: 250px;
            font-size: 14px;
        }

        .search-box:focus {
            outline: none;
            border-color: #667eea;
        }

        .filter-select {
            padding: 10px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 14px;
            cursor: pointer;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #f9fafb;
        }

        th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: #374151;
            font-size: 13px;
            text-transform: uppercase;
        }

        td {
            padding: 15px;
            border-top: 1px solid #e5e7eb;
            color: #4b5563;
        }

        tbody tr:hover {
            background: #f9fafb;
        }

        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .badge.pending, .badge.Pending { background: #fef3c7; color: #92400e; }
        .badge.accepted, .badge.Accepted { background: #d1fae5; color: #065f46; }
        .badge.rejected, .badge.Rejected, .badge.Denied { background: #fee2e2; color: #991b1b; }
        .badge.open { background: #dbeafe; color: #1e40af; }
        .badge.available { background: #d1fae5; color: #065f46; }
        .badge.busy { background: #fed7aa; color: #9a3412; }
        .badge.unavailable { background: #fee2e2; color: #991b1b; }
        .badge.completed, .badge.Completed { background: #dbeafe; color: #1e3a8a; }
        .badge.closed { background: #e5e7eb; color: #374151; }

        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 600;
            margin-right: 5px;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .action-btn.view {
            background: #3b82f6;
            color: white;
        }

        .action-btn.delete {
            background: #ef4444;
            color: white;
        }

        .action-btn:hover {
            transform: scale(1.05);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6b7280;
        }

        .empty-state h3 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .progress-bar {
            width: 100px;
            height: 8px;
            background: #e5e7eb;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.3s;
        }

        .rating {
            color: #f59e0b;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <div class="header">
            <h1>üéØ Admin Dashboard</h1>
            <div class="header-actions">
                <button class="btn btn-primary" onclick="window.location.reload()">üîÑ Refresh Data</button>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card blue">
                <h3>Total Customers</h3>
                <div class="value"><%= customers.length %></div>
            </div>
            <div class="stat-card purple">
                <h3>Total Companies</h3>
                <div class="value"><%= companies.length %></div>
            </div>
            <div class="stat-card green">
                <h3>Total Workers</h3>
                <div class="value"><%= workers.length %></div>
            </div>
            <div class="stat-card orange">
                <h3>Active Projects</h3>
                <div class="value"><%= constructionProjects.filter(p => p.status === 'accepted').length %></div>
            </div>
            <div class="stat-card red">
                <h3>Pending Requests</h3>
                <div class="value">
                    <%= architectHirings.filter(h => h.status === 'Pending').length + 
                        designRequests.filter(d => d.status === 'pending').length %>
                </div>
            </div>
            <div class="stat-card indigo">
                <h3>Open Bids</h3>
                <div class="value"><%= bids.filter(b => b.status === 'open').length %></div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <div class="tab-buttons">
                <button class="tab-btn active" onclick="switchTab('customers')">Customers (<%= customers.length %>)</button>
                <button class="tab-btn" onclick="switchTab('companies')">Companies (<%= companies.length %>)</button>
                <button class="tab-btn" onclick="switchTab('workers')">Workers (<%= workers.length %>)</button>
                <button class="tab-btn" onclick="switchTab('architect-hirings')">Architect Hirings (<%= architectHirings.length %>)</button>
                <button class="tab-btn" onclick="switchTab('construction-projects')">Construction Projects (<%= constructionProjects.length %>)</button>
                <button class="tab-btn" onclick="switchTab('design-requests')">Design Requests (<%= designRequests.length %>)</button>
                <button class="tab-btn" onclick="switchTab('bids')">Bids (<%= bids.length %>)</button>
                <button class="tab-btn" onclick="switchTab('job-applications')">Job Applications (<%= jobApplications.length %>)</button>
            </div>
        </div>

        <!-- Content Sections -->
        <div class="content-section">
            <!-- Customers Tab -->
            <div id="customers" class="tab-content active">
                <div class="section-header">
                    <h2>Customers Management</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search customers..." onkeyup="filterTable('customersTable', this.value)">
                    </div>
                </div>
                <div class="table-container">
                    <% if (customers.length > 0) { %>
                    <table id="customersTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Date of Birth</th>
                                <th>Joined Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% customers.forEach(customer => { %>
                            <tr>
                                <td><%= customer.name %></td>
                                <td><%= customer.email %></td>
                                <td><%= customer.phone %></td>
                                <td><%= new Date(customer.dob).toLocaleDateString() %></td>
                                <td><%= new Date(customer.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/customer/<%= customer._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteUser('customer', '<%= customer._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Customers Found</h3>
                        <p>There are no registered customers yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Companies Tab -->
            <div id="companies" class="tab-content">
                <div class="section-header">
                    <h2>Companies Management</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search companies..." onkeyup="filterTable('companiesTable', this.value)">
                    </div>
                </div>
                <div class="table-container">
                    <% if (companies.length > 0) { %>
                    <table id="companiesTable">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Person</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Location</th>
                                <th>Size</th>
                                <th>Projects Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% companies.forEach(company => { %>
                            <tr>
                                <td><%= company.companyName %></td>
                                <td><%= company.contactPerson %></td>
                                <td><%= company.email %></td>
                                <td><%= company.phone %></td>
                                <td><%= company.location?.city || 'N/A' %></td>
                                <td><%= company.size || 'N/A' %></td>
                                <td><%= company.projectsCompleted || '0' %></td>
                                <td>
                                    <a href="/admin/company/<%= company._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteUser('company', '<%= company._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Companies Found</h3>
                        <p>There are no registered companies yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Workers Tab -->
            <div id="workers" class="tab-content">
                <div class="section-header">
                    <h2>Workers Management</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search workers..." onkeyup="filterTable('workersTable', this.value)">
                        <select class="filter-select" onchange="filterWorkersByStatus(this.value)">
                            <option value="all">All Status</option>
                            <option value="available">Available</option>
                            <option value="busy">Busy</option>
                            <option value="unavailable">Unavailable</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (workers.length > 0) { %>
                    <table id="workersTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Specialization</th>
                                <th>Experience</th>
                                <th>Rating</th>
                                <th>Availability</th>
                                <th>Is Architect</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% workers.forEach(worker => { %>
                            <tr data-status="<%= worker.availability %>">
                                <td><%= worker.name %></td>
                                <td><%= worker.email %></td>
                                <td><%= worker.specialization %></td>
                                <td><%= worker.experience %> years</td>
                                <td><span class="rating">‚≠ê <%= worker.rating.toFixed(1) %></span></td>
                                <td><span class="badge <%= worker.availability %>"><%= worker.availability %></span></td>
                                <td><%= worker.isArchitect ? 'Yes' : 'No' %></td>
                                <td>
                                    <a href="/admin/worker/<%= worker._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteUser('worker', '<%= worker._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Workers Found</h3>
                        <p>There are no registered workers yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Architect Hirings Tab -->
            <div id="architect-hirings" class="tab-content">
                <div class="section-header">
                    <h2>Architect Hiring Requests</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search projects..." onkeyup="filterTable('architectHiringsTable', this.value)">
                        <select class="filter-select" onchange="filterByStatus('architectHiringsTable', this.value)">
                            <option value="all">All Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Accepted">Accepted</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (architectHirings.length > 0) { %>
                    <table id="architectHiringsTable">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Customer Name</th>
                                <th>Design Type</th>
                                <th>Plot Size</th>
                                <th>Budget</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% architectHirings.forEach(hiring => { %>
                            <tr data-status="<%= hiring.status %>">
                                <td><%= hiring.projectName %></td>
                                <td><%= hiring.customerDetails.fullName %></td>
                                <td><%= hiring.designRequirements.designType %></td>
                                <td><%= hiring.plotInformation.plotSize %></td>
                                <td><%= hiring.additionalDetails?.budget || 'N/A' %></td>
                                <td><span class="badge <%= hiring.status %>"><%= hiring.status %></span></td>
                                <td><%= new Date(hiring.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/architect-hiring/<%= hiring._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteItem('architectHiring', '<%= hiring._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Architect Hirings Found</h3>
                        <p>There are no architect hiring requests yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Construction Projects Tab -->
            <div id="construction-projects" class="tab-content">
                <div class="section-header">
                    <h2>Construction Projects</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search projects..." onkeyup="filterTable('constructionProjectsTable', this.value)">
                        <select class="filter-select" onchange="filterByStatus('constructionProjectsTable', this.value)">
                            <option value="all">All Status</option>
                            <option value="pending">Pending</option>
                            <option value="accepted">Accepted</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (constructionProjects.length > 0) { %>
                    <table id="constructionProjectsTable">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Customer Name</th>
                                <th>Building Type</th>
                                <th>Total Area</th>
                                <th>Budget</th>
                                <th>Progress</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% constructionProjects.forEach(project => { %>
                            <tr data-status="<%= project.status %>">
                                <td><%= project.projectName %></td>
                                <td><%= project.customerName %></td>
                                <td><%= project.buildingType %></td>
                                <td><%= project.totalArea %> sq ft</td>
                                <td>‚Çπ<%= project.estimatedBudget?.toLocaleString() || 'N/A' %></td>
                                <td>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: <%= project.completionPercentage %>%"></div>
                                    </div>
                                    <%= project.completionPercentage %>%
                                </td>
                                <td><span class="badge <%= project.status %>"><%= project.status %></span></td>
                                <td>
                                    <a href="/admin/construction-project/<%= project._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteItem('constructionProject', '<%= project._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Construction Projects Found</h3>
                        <p>There are no construction projects yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Design Requests Tab -->
            <div id="design-requests" class="tab-content">
                <div class="section-header">
                    <h2>Design Requests</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search requests..." onkeyup="filterTable('designRequestsTable', this.value)">
                        <select class="filter-select" onchange="filterByStatus('designRequestsTable', this.value)">
                            <option value="all">All Status</option>
                            <option value="pending">Pending</option>
                            <option value="accepted">Accepted</option>
                            <option value="rejected">Rejected</option>
                            <option value="completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (designRequests.length > 0) { %>
                    <table id="designRequestsTable">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Customer Name</th>
                                <th>Room Type</th>
                                <th>Room Size</th>
                                <th>Design Preference</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% designRequests.forEach(request => { %>
                            <tr data-status="<%= request.status %>">
                                <td><%= request.projectName %></td>
                                <td><%= request.fullName %></td>
                                <td><%= request.roomType %></td>
                                <td><%= request.roomSize.length %> x <%= request.roomSize.width %> <%= request.roomSize.unit %></td>
                                <td><%= request.designPreference || 'N/A' %></td>
                                <td><span class="badge <%= request.status %>"><%= request.status %></span></td>
                                <td><%= new Date(request.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/design-request/<%= request._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteItem('designRequest', '<%= request._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Design Requests Found</h3>
                        <p>There are no design requests yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Bids Tab -->
            <div id="bids" class="tab-content">
                <div class="section-header">
                    <h2>Construction Bids</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search bids..." onkeyup="filterTable('bidsTable', this.value)">
                        <select class="filter-select" onchange="filterByStatus('bidsTable', this.value)">
                            <option value="all">All Status</option>
                            <option value="open">Open</option>
                            <option value="closed">Closed</option>
                            <option value="awarded">Awarded</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (bids.length > 0) { %>
                    <table id="bidsTable">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Building Type</th>
                                <th>Total Area</th>
                                <th>Budget</th>
                                <th>Total Bids</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bids.forEach(bid => { %>
                            <tr data-status="<%= bid.status %>">
                                <td><%= bid.customerName %></td>
                                <td><%= bid.buildingType %></td>
                                <td><%= bid.totalArea %> sq ft</td>
                                <td>‚Çπ<%= bid.estimatedBudget?.toLocaleString() || 'N/A' %></td>
                                <td><%= bid.companyBids.length %> bids</td>
                                <td><span class="badge <%= bid.status %>"><%= bid.status %></span></td>
                                <td><%= new Date(bid.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/bid/<%= bid._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteItem('bid', '<%= bid._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Bids Found</h3>
                        <p>There are no construction bids yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Job Applications Tab -->
            <div id="job-applications" class="tab-content">
                <div class="section-header">
                    <h2>Job Applications</h2>
                    <div class="search-filter">
                        <input type="text" class="search-box" placeholder="Search applications..." onkeyup="filterTable('jobApplicationsTable', this.value)">
                        <select class="filter-select" onchange="filterByStatus('jobApplicationsTable', this.value)">
                            <option value="all">All Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Accepted">Accepted</option>
                            <option value="Denied">Denied</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <% if (jobApplications.length > 0) { %>
                    <table id="jobApplicationsTable">
                        <thead>
                            <tr>
                                <th>Applicant Name</th>
                                <th>Email</th>
                                <th>Position</th>
                                <th>Company</th>
                                <th>Experience</th>
                                <th>Expected Salary</th>
                                <th>Status</th>
                                <th>Applied Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% jobApplications.forEach(application => { %>
                            <tr data-status="<%= application.status %>">
                                <td><%= application.fullName %></td>
                                <td><%= application.email %></td>
                                <td><%= application.positionApplying %></td>
                                <td><%= application.compName %></td>
                                <td><%= application.experience %> years</td>
                                <td>‚Çπ<%= application.expectedSalary.toLocaleString() %></td>
                                <td><span class="badge <%= application.status %>"><%= application.status %></span></td>
                                <td><%= new Date(application.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/job-application/<%= application._id %>" class="action-btn view">View</a>
                                    <button class="action-btn delete" onclick="deleteItem('jobApplication', '<%= application._id %>')">Delete</button>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="empty-state">
                        <h3>No Job Applications Found</h3>
                        <p>There are no job applications yet.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab Switching
        function switchTab(tabName) {
            // Remove active class from all tabs and buttons
            const tabs = document.querySelectorAll('.tab-content');
            const buttons = document.querySelectorAll('.tab-btn');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Add active class to selected tab
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Table Search/Filter
        function filterTable(tableId, searchTerm) {
            const table = document.getElementById(tableId);
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            
            for (let row of rows) {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm.toLowerCase())) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }

        // Filter by Status
        function filterByStatus(tableId, status) {
            const table = document.getElementById(tableId);
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            
            for (let row of rows) {
                if (status === 'all') {
                    row.style.display = '';
                } else {
                    const rowStatus = row.getAttribute('data-status');
                    if (rowStatus === status) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            }
        }

        // Filter Workers by Status
        function filterWorkersByStatus(status) {
            filterByStatus('workersTable', status);
        }

        // Delete User
        function deleteUser(type, id) {
            if (confirm(`Are you sure you want to delete this ${type}?`)) {
                fetch(`/admin/delete-${type}/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`${type} deleted successfully`);
                        window.location.reload();
                    } else {
                        alert('Error deleting ' + type);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting ' + type);
                });
            }
        }

        // Delete Item (Projects, Requests, etc.)
        function deleteItem(type, id) {
            if (confirm(`Are you sure you want to delete this ${type}?`)) {
               fetch(`/admin/delete-${type}/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`${type} deleted successfully`);
                        window.location.reload();
                    } else {
                        alert('Error deleting ' + type);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting ' + type);
                });
            }
        }
    </script>
</body>
</html>