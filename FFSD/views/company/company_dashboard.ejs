                            <p>Client: <span><%= project.customerName %></span></p>
                            <p>Start: <span><%= new Date(project.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span></p>
                            <p>End: <span><%= project.projectTimeline ? new Date(new Date(project.createdAt).setMonth(new Date(project.createdAt).getMonth() + project.projectTimeline)).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'TBD' %></span></p>
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar" style="width: <%= progress %>%;"></div>
                        </div>
                        <div class="progress-info">
                            <span>Progress: <%= progress %>%</span>
                            <span><%= daysRemaining %> days remaining</span>
                        </div>
                    </div>
                    <div class="project-status <%= statusClass %>">
                        <%= statusText %>
                    </div>
                </div>
            <% }) %>
        </div>
