    <%- include('navbar_company') %>
    <div class="main-container">
        <% 
        const MS_PER_DAY = 1000 * 60 * 60 * 24;
        const calculateProgress = (startDate, durationMonths) => {
            if (!startDate || !durationMonths) return 0;
            const start = new Date(startDate).getTime();
            const end = new Date(start).setMonth(new Date(start).getMonth() + durationMonths);
            const totalDurationDays = Math.round((end - start) / MS_PER_DAY);
            const elapsedDays = Math.round((Date.now() - start) / MS_PER_DAY);
            
            if (elapsedDays <= 0) return 0;
            if (elapsedDays >= totalDurationDays) return 100;

            return Math.min(100, Math.round((elapsedDays / totalDurationDays) * 100));
        };
        const calculateDaysRemaining = (startDate, durationMonths) => {
            if (!startDate || !durationMonths) return 'N/A';
            const start = new Date(startDate).getTime();
            const end = new Date(start).setMonth(new Date(start).getMonth() + durationMonths);
            const remainingDurationDays = Math.round((end - Date.now()) / MS_PER_DAY);
            return Math.max(0, remainingDurationDays);
        };
        %>
        
