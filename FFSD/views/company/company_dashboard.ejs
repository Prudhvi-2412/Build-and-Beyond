        </div>

        <div class="timeline-container">
            <% projects.filter(project => project.status === 'accepted').forEach(project => { %>
                <% 
                    const progress = calculateProgress(project.createdAt, project.projectTimeline);
                    const daysRemaining = calculateDaysRemaining(project.createdAt, project.projectTimeline);
                    // Simple status logic: Completed=Success, < 10 days remaining=Warning/Delayed, otherwise On Track
                    let statusText = 'On Track';
                    let statusClass = '';
                    if (progress >= 100) {
                        statusText = 'Completed';
                        statusClass = 'status-success';
                    } else if (daysRemaining <= 10 && daysRemaining > 0) {
                        statusText = 'At Risk';
                        statusClass = 'status-at-risk';
                    } else if (progress > 50 && daysRemaining < (project.projectTimeline * 30 / 2)) {
                        // This is a placeholder for more complex logic. For now, we'll keep it simple:
                        statusText = 'On Track';
                        statusClass = '';
                    } else if (progress < 100 && daysRemaining === 0) {
                        statusText = 'Overdue';
                        statusClass = 'status-danger';
                    }
                %>
                <div class="timeline-project">
                    <div class="project-info">
                        <h3><%= project.projectName %></h3>
